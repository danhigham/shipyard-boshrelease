#!/usr/bin/env bash

#
# Shipyard properties
#

# Directory to store the Shipyard database configuration files
export SHIPYARD_DB_VOL_CONF_DIR=$JOB_DIR/config

# Directory to store the Shipyard database logs
export SHIPYARD_DB_VOL_LOG_DIR=$LOG_DIR

# Directory to store the Shipyard database process IDs
export SHIPYARD_DB_VOL_PID_DIR=$RUN_DIR

# User which will own the Docker services
export DOCKER_USER="<%= p('docker.user') %>"

# Group which will own the Docker services
export DOCKER_GROUP="<%= p('docker.group') %>"

export DOCKER_PORT="<%= p('docker.tcp_port') %>"

export SHIPYARD_PORT="<%= p('shipyard.port') %>"

export SHIPYARD_HOST="<%= p('shipyard.host') %>"
